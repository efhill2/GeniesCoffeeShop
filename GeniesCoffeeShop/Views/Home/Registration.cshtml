    <br />
    <br />
    @Html.Raw(ViewBag.PasswordStatusMessage)
    Password Confirmation: <input type="password" name="pwconfirm" required pattern="[A-Za-z0-9]{8,30}" title="Use Letters, Numbers only. Must be atleast eight characters" />
